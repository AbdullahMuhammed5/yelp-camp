<% include ./partials/header.ejs %>

<section class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to campgrounds</h1>
			<p>View our hand-picked campgrounds from all ovre the world</p>
			<p>
				<a href="campgrounds/new" class="btn btn-primary">Add new Campground</a>
			</p> 
		</div>
	</header>

	<!-- <div class="col-lg-12">
		<h3>Our Most Popular Campgrounds!</h3>
	</div> -->
	<div class="row">
		<% campgrounds.forEach( function(element, index) { %>
			<div class="col-md-4 col-sm-6">
				<figure class="figure">
					<img src="<%= element.image%>" class="figure-img img-fluid">
					<figcaption class="figure-caption text-center"><%= element.name %></figcaption>
				</figure>
			</div>
		<% }) %>
	</div>
</section>

<% include ./partials/footer.ejs %>