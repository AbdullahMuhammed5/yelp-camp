<% include ../partials/header.ejs%>

<div class="container">
	<div style="width: 60%; margin: 0 auto">
		<h1>Edit <%=campground.name%></h1><hr>
		<form action="/campgrounds/<%= campground._id %>?_method=PUT" method="post">
			<input type="text" name="campground[name]" placeholder="Name" class="form-control mb-2" value="<%=campground.name%>" required>
			<input type="number" name="campground[price]" placeholder="Price/Night" class="form-control mb-2" value="<%=campground.price%>" min="0.1" step="0.1" oninput="this.value = Math.abs(this.value)"">
			<input type="text" name="campground[image]" placeholder="Image Url" class="form-control mb-2" value="<%= campground.image %>" required>
			<textarea name="campground[description]" id=""
			placeholder="Add a description" required
			class="form-control mb-2"><%= campground.description %></textarea>
			<button type="submit" class="btn btn-primary">Save Changes</button>
		</form>
		or <a href="/campgrounds/<%= campground._id %>" class="mb-2">Go Back</a>
	</div>
</div>

<% include ../partials/footer.ejs %>